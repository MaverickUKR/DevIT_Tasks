{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "lib": ["es2022", "dom", "dom.iterable", "esnext"],
    "jsx": "react-jsx"
  },
  "include": ["client/src/**/*.tsx", "server/**/*.ts"],
  "exclude": ["node_modules", "data", "public"]
}
